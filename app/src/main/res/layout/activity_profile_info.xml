                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/email_id"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/inter_semi_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etTruckNumber" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etEmailPI"
                        style="@style/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:hint="@string/email_id"
                        app:layout_constraintTop_toBottomOf="@+id/tvEmailPI" />
-->

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPhoneNumberPI"
                        style="@style/defaultTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:inputType="number"
                        android:text="@string/phone_number_text"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/inter_semi_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etTruckNumber" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etPhoneNumberPI"
                        style="@style/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:hint="@string/phone_number_text"
                        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberPI" />







              <!--      <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPanNoPI"
                        style="@style/defaultTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
